<%- include('partials/dashboard') %>

    <!-- Add City Section -->
    <div class="flex-1 mb-10 bg-white shadow-lg p-8 rounded-lg border border-gray-200 w-full lg:max-w-full">
        <div class="flex justify-between items-center border-b border-gray-200 pb-4">
            <h1 class="text-2xl font-bold text-gray-900">Add City</h1>
        </div>

        <!-- Add City Form -->
        <form class="mt-6 flex flex-col gap-6" action="/add-city" method="POST">
            <div>
                <label for="cityEnglish" class="block text-gray-800 font-medium mb-2">City (English)</label>
                <input type="text" id="cityEnglish" name="cityEnglish" placeholder="Enter city name in English"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm">
            </div>
            <div>
                <label for="cityUrdu" class="block text-gray-800 font-medium mb-2">شہر (اردو)</label>
                <input type="text" id="cityUrdu" name="cityUrdu" placeholder="اردو میں شہر کا نام درج کریں"
                    class="w-full text-right px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm"
                    style="text-align: left;">
            </div>

            <button type="submit"
                class="bg-blue-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-700 transition-all duration-300">Add
                City</button>
        </form>
    </div>