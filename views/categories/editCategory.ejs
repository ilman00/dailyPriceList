<%- include('../partials/dashboard') %>

    <!-- Edit City Section -->
    <div class="flex-1 mb-10 bg-white shadow-lg p-8 rounded-lg border border-gray-200 w-full lg:max-w-full">
        <div class="flex justify-between items-center border-b border-gray-200 pb-4">
            <h1 class="text-2xl font-bold text-gray-900">Edit City</h1>
        </div>

        <!-- Edit City Form -->
        <form class="mt-6 flex flex-col gap-6" action="/update-category/<%= category.id %>" method="POST">
            <div>
                <label for="cityEnglish" class="block text-gray-800 font-medium mb-2">Category (English)</label>
                <input type="text" id="categoryEnglish" name="categoryEnglish" value="<%= category.categoryEnglish %>"
                    placeholder="Enter category name in English"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm">
            </div>

            <div>
                <label for="categoryUrdu" class="block text-gray-800 font-medium mb-2">قسم (اردو)</label>
                <input type="text" id="categoryUrdu" name="categoryUrdu" value="<%= category.categoryUrdu %>"
                    placeholder="اردو میں قسم کا نام درج کریں"
                    class="w-full text-right px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm"
                    style="text-align: left;">
            </div>


            <button type="submit"
                class="bg-blue-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-700 transition-all duration-300">
                Update Category
            </button>
        </form>

        <div class="mt-6">
            <a href="/categories"
                class="text-blue-600 hover:text-blue-800 text-sm font-medium transition-all duration-300">Back to
                Category
                List</a>
        </div>
    </div>