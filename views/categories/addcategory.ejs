<%- include('../partials/dashboard') %>

    <!-- Add Category Section -->
    <div class="flex-1 mb-10 bg-white shadow-lg p-8 rounded-lg border border-gray-200 max-w-full">
        <div class="flex justify-between items-center border-b border-gray-200 pb-4">
            <h1 class="text-2xl font-bold text-gray-900">Add Category</h1>
        </div>

        <!-- Add Category Form -->
        <form class="mt-6 flex flex-col gap-6" method="post" action="/add-category">
            <div>
                <label for="categoryEnglish" class="block text-gray-800 font-medium mb-2">Category (English)</label>
                <input type="text" id="categoryEnglish" name="categoryEnglish"
                    placeholder="Enter category name in English"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm">
            </div>
            <div>
                <label for="categoryUrdu" class="block text-gray-800 font-medium mb-2">قسم (اردو)</label>
                <input type="text" id="categoryUrdu" name="categoryUrdu" placeholder="اردو میں قسم کا نام درج کریں"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm text-right">
            </div>
            <button type="submit"
                class="bg-blue-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-700 transition-all duration-300">Add
                Category</button>
        </form>
    </div>