<!-- JavaScript for Dropdown Toggle -->
<script>
    document.getElementById("settings-btn").addEventListener("click", function (event) {
        event.stopPropagation();
        document.getElementById("settings-menu").classList.toggle("hidden");
        document.getElementById("content-menu").classList.add("hidden"); // Close other menu
    });

    document.getElementById("content-btn").addEventListener("click", function (event) {
        event.stopPropagation();
        document.getElementById("content-menu").classList.toggle("hidden");
        document.getElementById("settings-menu").classList.add("hidden"); // Close other menu
    });

    // Close dropdowns when clicking outside
    document.addEventListener("click", function (event) {
        if (!event.target.closest("#settings-btn, #settings-menu")) {
            document.getElementById("settings-menu").classList.add("hidden");
        }
        if (!event.target.closest("#content-btn, #content-menu")) {
            document.getElementById("content-menu").classList.add("hidden");
        }
    });
</script>